<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_new_bg"
    >

    <RelativeLayout
        android:id="@+id/relativebody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernamewrapper"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/MyAppearance"
            >

            <EditText
                android:id="@+id/edt_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_design"
                android:drawableLeft="@drawable/ic_username_new"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:textColorHint="@color/white"
                android:text=""
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:backgroundTint="@color/white_transparent"/>
            <View
                android:background="#acacac"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/userpasswordwrapper"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/usernamewrapper"
            android:layout_alignRight="@+id/usernamewrapper"
            android:layout_below="@+id/usernamewrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/MyAppearance">

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_design"
                android:drawableLeft="@drawable/ic_password_new"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:text=""
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:backgroundTint="@color/white_transparent"
                android:textColor="@color/white"
                android:imeOptions="actionSend"
               />
            <View
                android:background="#acacac"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/userpasswordwrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonshape"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_reset"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/btn_login"
            android:layout_alignRight="@+id/btn_login"
            android:layout_below="@+id/btn_login"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Forgot password?"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible"/>

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
