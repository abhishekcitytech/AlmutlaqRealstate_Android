<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_open"
        android:text="OPEN"
        android:textColor="@color/open_complain_color"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tv_complain_title"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"/>


    <TextView
        android:id="@+id/tv_closed"
        android:layout_toRightOf="@+id/tv_complain_title"
        android:text="CLOSED"
        android:textColor="@color/close_complain_color"
         android:gravity="center"
        android:textSize="15sp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_complain_title"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Complaint for service"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/tv_complain_name"
        android:layout_below="@+id/tv_complain_title"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Problem with last service."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingRight="40dp"/>

    <View
        android:layout_below="@+id/tv_complain_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/btn_grey"/>



</RelativeLayout>
