<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/calendar_button_selector"
    android:orientation="vertical">

    <TextView
        android:id="@+id/calendar_day_gridcell"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/calendar_button_selector"
        android:gravity="center"
        android:text="12"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/num_events_per_day"
        style="@style/calendar_event_style"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/calendar_day_gridcell"
        android:layout_alignLeft="@+id/calendar_day_gridcell"
        android:layout_alignRight="@+id/calendar_day_gridcell"
        android:layout_gravity="right"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="3dp"
        android:background="@color/white"
        android:textSize="12sp" />

    <!--android:background="@drawable/calendar_text_selector"-->

</RelativeLayout>