<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:background="@drawable/ll_dialog_design"
            android:id="@+id/cpredictedRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >

                <TextView
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:id="@+id/tvAck_TitleHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acknowledgement"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/tvAck_datetime"
                    android:layout_below="@+id/tvcTitleHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Booking date : "
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    />
            <TextView
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:id="@+id/tvAck_tenant_slottime"
                android:layout_below="@+id/tvcTitleHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking slot  : "
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_ack_cal_date"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/edittxt_box"
                android:hint="Choose reporting date"
                android:textColor="@color/black"
                android:paddingRight="3dp"
                android:paddingLeft="20dp"
                android:textSize="14sp"
                android:gravity="center"
                android:drawableRight="@drawable/ic_calendar"
                android:drawablePadding="3dp"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:background="@drawable/spinner_border"
                android:id="@+id/sp_ack_Time"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:overlapAnchor="false"
                android:popupBackground="@color/sp_time_bg"
                android:dropDownVerticalOffset="1dp"
                android:spinnerMode="dropdown"
                android:theme="@style/MatchSpinnerTheme"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_ack_note"
                android:gravity="top"
                android:padding="5dp"
                android:layout_below="@+id/sp_ack_Time"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/edittxt_box"
                />


            <View
                    android:id="@+id/cvw"
                    android:layout_below="@+id/tvcTitleHeader"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/btn_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@color/btn_grey">

                <TextView
                    android:id="@+id/tv_ack_cancel"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textSize="18sp"
                    android:textColor="@color/Red"
                    android:textStyle="normal|bold"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/tv_ack_submit"
                    android:gravity="center"
                    android:text="Submit"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="normal|bold"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>











        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
