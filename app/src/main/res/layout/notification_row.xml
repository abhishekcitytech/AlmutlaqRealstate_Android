<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_Notify"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/userprof_new"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_n_date_title"
        android:layout_toRightOf="@+id/img_Notify"
        android:layout_marginTop="10dp"
        android:text="Date "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|normal"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvdot1"
        android:layout_toRightOf="@+id/tv_n_date_title"
        android:layout_alignLeft="@+id/tvdot3"
        android:text=": "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_n_date"
        android:text="12-12-2018"
        android:layout_toRightOf="@+id/tvdot1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_n_time"
        android:layout_marginTop="10dp"
        android:text="11:25"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_n_date"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_n_sub_title"
        android:layout_toRightOf="@+id/img_Notify"
        android:layout_below="@+id/tv_n_date_title"
        android:layout_marginTop="5dp"
        android:text="Subject "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold|normal"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/tv_n_subject"/>

    <TextView
        android:id="@+id/tvdot2"
        android:layout_toRightOf="@+id/tv_n_sub_title"
       android:layout_alignLeft="@+id/tvdot3"
        android:layout_below="@+id/tv_n_date"
        android:text=": "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_n_subject"
        android:layout_toRightOf="@+id/tvdot2"
        android:layout_below="@+id/tv_n_date"
        android:layout_marginTop="5dp"
        android:text="xyz nnnnkkkkkkkkkkkk cncjkdjdjjfjfjfjfjfjfjfjfjfjj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
       />

    <TextView
        android:id="@+id/tv_n_msg_title"
        android:layout_toRightOf="@+id/img_Notify"
        android:layout_below="@+id/tv_n_sub_title"
        android:layout_marginTop="5dp"
        android:text="Message "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold|normal"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/tv_n_msg"/>

    <TextView
        android:id="@+id/tvdot3"
        android:layout_toRightOf="@+id/tv_n_msg_title"
        android:layout_below="@+id/tv_n_subject"
        android:layout_alignBaseline="@+id/tv_n_msg"
        android:text=": "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/tv_n_msg"
        android:layout_toRightOf="@+id/tvdot3"
        android:layout_below="@+id/tv_n_subject"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="xyz nnnnkkkkkkkkkkkk cncjkdjdjjfjfjfjfjfjfjfjfjfjj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        />

    <View
        android:background="@color/Gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_n_msg"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>
